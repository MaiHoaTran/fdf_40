<%= provide :title, t(".title") %>
<ol class="breadcrumb">
  <li class="breadcrumb-item active"><%= link_to t(".title"), admin_users_path %></li>
  <li class="breadcrumb-item">
    <%= link_to t(".add"), new_admin_user_path %>
  </li>
</ol>
<div class="card mb-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th><%= t ".id" %></th>
            <th><%= t ".email" %></th>
            <th><%= t ".full_name" %></th>
            <th><%= t ".sex" %></th>
            <th><%= t ".phone" %></th>
            <th><%= t ".role" %></th>
            <th class="function"><%= t "admin.categories.index.function" %></th>
          </tr>
        </thead>
        <tbody>
          <%
            @users.each do |user|
          %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.email %></td>
              <td><%= user.full_name %></td>
              <td><%= load_sex user.sex %></td>
              <td><%= user.phone %></td>
              <td><%= load_role_name user.roles %></td>
              <td class="function">
                <%= link_to image_tag("edit.jpg", alt: t(".edit")), edit_admin_user_path(user) %> |
                <%= link_to image_tag("delete.jpg", alt: t(".delete")), admin_user_path(user), method: :delete, data: {confirm: t(".confirm_delete")} %>
              </td>
            </tr>
          <%
            end
          %>
        </tbody>
      </table>
      <%= will_paginate %>
    </div>
  </div>
</div>
