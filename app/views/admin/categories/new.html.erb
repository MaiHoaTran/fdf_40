<%= provide :title, t(".title") %>
<h2><%= t ".title" %></h2>
<%= form_for(@category, url: admin_categories_path) do |f| %>
  <%= f.label t ".name" %>
  <%= f.text_field :name %>

  <%= f.label t ".parent" %>
  <%= select_tag :parent, options_for_select({}.collect{ |u| [u.name, u.id]}) %>

  <%= f.submit t(".submit"), class: "btn btn-primary" %>
<% end %>
