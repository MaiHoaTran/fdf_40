<%= provide :title, t(".title") %>
<ol class="breadcrumb">
  <li class="breadcrumb-item active"><%= link_to t(".title"), admin_categories_path %></li>
  <li class="breadcrumb-item">
    <%= link_to t(".add"), new_admin_category_path %>
  </li>
</ol>
<div class="card mb-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th><%= t ".id" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".parent_id" %></th>
            <th class="function"><%= t ".function" %></th>
          </tr>
        </thead>
        <tbody>
          <%
            @categories.each do |category|
              if category.parent.blank?
          %>
          <tr>
            <td><%= category.id %></td>
            <td><%= link_to category.name, edit_admin_category_path(category) %></td>
            <td><%= category.parent %></td>
            <td class="function">
              <%= link_to image_tag("edit.jpg", alt: t(".edit")), edit_admin_category_path(category) %> |
              <%= link_to image_tag("delete.jpg", alt: t(".delete")), admin_category_path(category), method: :delete, data: {confirm: t(".confirm_delete")} %>
            </td>
            <%= render partial: "subcategory", locals: {subcategories: category.subcategories} if category.subcategories.present? %>
          </tr>
          <%
              end
            end
          %>
        </tbody>
      </table>
    </div>
  </div>
</div>
