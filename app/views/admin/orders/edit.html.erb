<%= provide :title, t(".title") %>
<ol class="breadcrumb">
  <li class="breadcrumb-item active"><%=  t ".title" %></li>
</ol>

<div class="card mb-3">
  <div class="card-body">
    <%= form_for(@order, url: admin_order_path) do |f| %>
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-6">
            <%= f.label t "admin.orders.index.date_order" %>
            <%= f.text_field :date_order, class: "form-control", disabled: true%>
          </div>
          <div class="col-md-6">
            <%= f.label t "admin.orders.index.total_price" %>
            <%= f.text_field :total_price, class: "form-control", disabled: true %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-6">
            <%= f.label t "admin.orders.index.user" %>
            <%= f.label @order.user.full_name, class: "form-control" %>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label t "admin.orders.index.status" %>
              <%= f.select :status, options_for_select(load_status_form, selected: @order.status) %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="btn-group mr-2">
          <%= link_to t(".comeback"), admin_orders_path, class: "btn btn-primary", id: "comback" %>
        </div>
        <div class="btn-group">
          <%= f.submit t(".submit"), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <div class="table-responsive">
      <table class="table table-bordered" id="table_product" width="100%" cellspacing="0">
        <tr>
          <th><%= t ".id" %></th>
          <th><%= t ".product_name" %></th>
          <th><%= t ".quantity" %></th>
          <th><%= t ".price" %></th>
          <th class="function"><%= t ".total" %></th>
        </tr>
        <%= render @order_details %>
        <tr>
          <td colspan="4">Sum</td>
          <td class="function"><%= @order.total_price %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
